<div class="files__item@@if(context.class){ @@class}">
	<a class="files__inner files_@@alt" href="#" title="@@title">
		<div class="files__depict">
			<img src="@@src" alt="@@alt" />
		</div>
		<div class="files__description">
			<div class="files__title">@@title</div>
			<div class="files__meta">
				<span class="files__size">@@size</span>
				<span class="files__date">@@date</span>
			</div>
		</div>
	</a>
</div>